        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |      Q      |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |.............|  # \n");
        printf ("       #                 Q # \n");
        printf ("       ##################### \n");
    }
    if(carta == 12) {
        printf ("       ##################### \n");
        printf ("       # J .............   # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |      J      |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
        printf ("       #  |             |  # \n");
